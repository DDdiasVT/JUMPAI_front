<script>
    // --- CONFIGURA√á√ÉO ---
    // URL DE PRODU√á√ÉO DO SEU CLOUD RUN
    const API_BASE_URL = "https://motor-ia-832830832022.us-central1.run.app"; 
    const API_ANALISE_URL = `${API_BASE_URL}/analisar_salto/`;

    // --- ELEMENTOS UI ---
    const authScreen = document.getElementById('authScreen');
    const jumpForm = document.getElementById('jumpForm');
    const loginForm = document.getElementById('loginForm');
    const registerForm = document.getElementById('registerForm');
    const loadingOverlay = document.getElementById('loadingOverlay');
    const statusHeader = document.getElementById('statusHeader');
    const userEmailDisplay = document.getElementById('userEmailDisplay');
    const creditBalanceDisplay = document.getElementById('creditBalance');
    const fileNameDisplay = document.getElementById('fileName');
    const fileInput = document.getElementById('video');
    const logoutBtn = document.getElementById('logoutBtn');
    const headerActionBtn = document.getElementById('headerActionBtn');
    const authToggleMessage = document.getElementById('authToggleMessage');
    const emailInputForm = document.getElementById('email');

    // --- FUN√á√ÉO CENTRAL DE REQUISI√á√ÉO (LIDANDO COM X-WWW-FORM-URLENCODED) ---
    async function apiRequest(endpoint, formData, isLogin = false) {
        const url = `${API_BASE_URL}${endpoint}`;
        
        try {
            const response = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: formData.toString()
            });
            const data = await response.json();
            
            if (!response.ok) {
                // Captura erro 401, 409 etc.
                throw new Error(data.detail || data.mensagem || 'Erro desconhecido na API.');
            }
            return data;
        } catch (error) {
            alert(`Erro na API: ${error.message}`);
            if (isLogin) handleLogout();
            return null;
        }
    }

    // --- L√ìGICA DE EXIBI√á√ÉO E ESTADO ---

    function handleLogout() {
        localStorage.removeItem('access_token');
        localStorage.removeItem('user_email');
        localStorage.removeItem('user_credits');
        checkAuthStatus();
    }

    function checkAuthStatus() {
        const token = localStorage.getItem('access_token');
        const email = localStorage.getItem('user_email');
        const credits = localStorage.getItem('user_credits');

        if (token && email) {
            // USU√ÅRIO LOGADO
            authScreen.classList.add('hidden');
            jumpForm.classList.remove('hidden');
            statusHeader.classList.remove('hidden');

            // Atualiza UI
            userEmailDisplay.textContent = email;
            creditBalanceDisplay.textContent = credits || 'N/A';
            emailInputForm.value = email; // Preenche o campo email (desabilitado)

            headerActionBtn.textContent = `Saldo: ${credits} cr√©ditos`;
            headerActionBtn.classList.remove('bg-blue-600');
            headerActionBtn.classList.add('bg-green-600');

        } else {
            // USU√ÅRIO DESLOGADO
            authScreen.classList.remove('hidden');
            jumpForm.classList.add('hidden');
            statusHeader.classList.add('hidden');
            
            headerActionBtn.textContent = 'FAZER LOGIN';
            headerActionBtn.classList.remove('bg-green-600');
            headerActionBtn.classList.add('bg-blue-600');
        }
    }

    // --- HANDLERS DE AUTENTICA√á√ÉO ---

    loginForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        const email = document.getElementById('loginEmail').value;
        const password = document.getElementById('loginPassword').value;

        const formData = new URLSearchParams();
        formData.append('email', email);
        formData.append('password', password);

        const data = await apiRequest('/token', formData, true); // isLogin = true
        
        if (data && data.access_token) {
            localStorage.setItem('access_token', data.access_token);
            localStorage.setItem('user_email', email);
            
            // NOTE: Para obter os cr√©ditos, idealmente ter√≠amos um /user_info, mas faremos
            // a primeira chamada ao /analisar_salto/ para for√ßar a atualiza√ß√£o do saldo 
            // no localStorage. Por enquanto, a checagem b√°sica √© suficiente.
            
            // O c√≥digo de login √© eficiente, mas para o MVP, vamos assumir 5 cr√©ditos 
            // no primeiro login se o saldo n√£o existir, para a UX ser melhor.
            if (!localStorage.getItem('user_credits')) {
                localStorage.setItem('user_credits', 5);
            }
            
            checkAuthStatus();
        }
    });

    registerForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        const email = document.getElementById('registerEmail').value;
        const password = document.getElementById('registerPassword').value;

        const formData = new URLSearchParams();
        formData.append('email', email);
        formData.append('password', password);

        const data = await apiRequest('/register/', formData);

        if (data && data.status === "sucesso") {
            alert(`Cadastro OK! ${data.mensagem}. Fa√ßa Login agora.`);
            
            // Mudar para a tela de login
            document.getElementById('registerForm').classList.add('hidden');
            document.getElementById('loginForm').classList.remove('hidden');
            authToggleMessage.innerHTML = '<a href="#" id="showRegisterLink" class="text-blue-600 hover:text-blue-800">N√£o tem conta? Crie uma agora!</a>';
        }
    });
    
    // --- L√ìGICA DE AN√ÅLISE (PROTEGIDA POR TOKEN) ---

    document.getElementById('jumpForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        const token = localStorage.getItem('access_token');
        const current_email = localStorage.getItem('user_email');
        
        if (!token) {
            alert("Sess√£o expirada. Fa√ßa login novamente.");
            handleLogout();
            return;
        }
        
        const videoFile = document.getElementById('video').files[0];
        if (!videoFile) { alert("Por favor, selecione um v√≠deo!"); return; }

        loadingOverlay.classList.remove('hidden');
        loadingOverlay.classList.add('flex');

        // Preparar Dados (Obrigat√≥rio: Token no FormData)
        const formData = new FormData();
        formData.append('video', videoFile);
        formData.append('nome', document.getElementById('nome').value);
        formData.append('email', current_email); // O email √© pego do localStorage
        formData.append('telefone', document.getElementById('telefone').value);
        formData.append('altura_user', document.getElementById('altura_user').value);
        
        // O PONTO MAIS CR√çTICO: Enviar o Token
        formData.append('token', token); 

        try {
            const response = await fetch(API_ANALISE_URL, {
                method: 'POST',
                body: formData
            });

            const data = await response.json();
            
            if (response.status === 401) {
                alert(`Token inv√°lido. Refa√ßa o login.`);
                handleLogout(); 
                return;
            }
            if (response.status === 403) {
                 alert(`Cr√©ditos Insuficientes. Compre mais cr√©ditos!`);
                 handleLogout(); // Pode for√ßar o logout para mostrar a tela de compra
                 return;
            }

            if (!response.ok) {
                throw new Error(data.detail || 'Erro na an√°lise. Tente um v√≠deo menor ou mais curto.');
            }

            // Preencher Resultados
            if (data.status === "ok") {
                // Atualiza o saldo na interface (pega o valor retornado pelo backend)
                localStorage.setItem('user_credits', data.creditos_restantes);
                creditBalanceDisplay.textContent = data.creditos_restantes;
                headerActionBtn.textContent = `Saldo: ${data.creditos_restantes} cr√©ditos`;
                
                // Preenchimento de m√©tricas
                document.getElementById('resAltura').textContent = data.metricas.altura.toFixed(1) + " cm";
                document.getElementById('resDip').textContent = Math.round(data.metricas.dip) + "¬∞";
                document.getElementById('resExtensao').textContent = Math.round(data.metricas.extensao) + "¬∞";
                document.getElementById('resTempo').textContent = data.metricas.tempo.toFixed(2) + " s";
                
                // Texto do Gemini
                let planoTexto = data.plano.replace(/\*\*/g, ''); 
                document.getElementById('resPlano').innerText = planoTexto;

                document.getElementById('resultsSection').classList.remove('hidden');
                document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
            } else {
                alert("Ocorreu um erro inesperado na resposta da IA.");
            }

        } catch (error) {
            console.error(error);
            alert("Erro ao conectar com o servidor: " + error.message);
        } finally {
            loadingOverlay.classList.add('hidden');
            loadingOverlay.classList.remove('flex');
        }
    });

    // --- L√ìGICA DE UI E EVENTOS ---

    // Evento de Logout
    logoutBtn.addEventListener('click', handleLogout);
    
    // Sele√ß√£o de arquivo
    fileInput.addEventListener('change', function(e) {
        if(this.files && this.files.length > 0) {
            fileNameDisplay.textContent = this.files[0].name;
        }
    });

    // Toggle entre Login e Cadastro
    document.getElementById('authToggleMessage').addEventListener('click', (e) => {
        e.preventDefault();
        const isLoginVisible = !document.getElementById('loginForm').classList.contains('hidden');
        
        if (isLoginVisible) {
             // Mudar para Cadastro
             document.getElementById('registerForm').classList.remove('hidden');
             document.getElementById('loginForm').classList.add('hidden');
             e.target.textContent = 'J√° sou cliente. Fazer login.';
        } else {
             // Mudar para Login
             document.getElementById('registerForm').classList.add('hidden');
             document.getElementById('loginForm').classList.remove('hidden');
             e.target.textContent = 'N√£o tem conta? Crie uma agora!';
        }
    });
    
    // Inicializa√ß√£o
    checkAuthStatus();
</script>
</body> 
</html>
